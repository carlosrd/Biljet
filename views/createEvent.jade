block javascript
    script(type='text/javascript')
        $(document).ready(function() {
            $('a.create_event').click( function () {

                var arrayDate = $("#form_create_event .field_date").val().split("/");
                var arrayTime = $("#form_create_event .field_time").val().split(":");
                var date = new Date(arrayDate[2], arrayDate[1], arrayDate[0], arrayTime[0], arrayTime[1]);
                var data = {
                    title: $("#form_create_event .field_name").val(),
                    finishAt: date.getTime(),
                    time: $("#form_create_event .field_time").val(),
                    price: $("#form_create_event .field_price").val(),
                    province: $("#form_create_event .field_province").val(),
                    category: $("#form_create_event .field_category").val(),
                }

                $.ajax({
                    type: "POST",
                    url: "/api/event",
                    data: data,
                    success: function () {
                        window.location.href = '/';
                    }
                });
            });
        });

